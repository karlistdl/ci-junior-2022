pipeline {
    agent any
    triggers { 
        pollSCM('*/1 * * * *') 
    }
    stages {
        stage('build') {
            steps {
                echo "Building node app"
            }
        }
        stage('deploy-dev') {
            steps {
                script{
                    deploy("DEV")
                }
            }
        }
        stage('test-dev') {
            steps {
                echo "Testing on DEV..."
            }
        }
        stage('deploy-int') {
            steps {
                script{
                    deploy("INT")
                }
            }
        }
        stage('test-int') {
            steps {
                echo "Testing on INT..."
            }
        }
        stage('deploy-prd') {
            steps {
                script{
                    deploy("PRD")
                }
            }
        }
        stage('test-prd') {
            steps {
                echo "Testing on PRD..."
            }
        }            
    }
}

def deploy(String environment){
    echo "Deployment on ${environment} environmnt triggered.."
    build job: "UI test", parameters: [string(name: "ENVIRONMENT", value:"${environment}")]
}

def test(String environment){
    echo "Tests on ${environment} environment triggered.."
    sh "docker run --network=host -d -t --name api_tests_executor_${environment} api_test_executor"
    sh "docker exec api_tests_executor_${environment} 	cucumber --tags=${environment} --format html --out test-output/report_$(date +%T).html"
    sh "docker cp api_tests_executor_${environment}:usr/src/api-tests/test-output/report.html report_${environment}.html"
    sh "docker rm -f api_tests_executor_${environment}"
}